@{
    ViewData["Title"] = "Server Error";
}
<div class="container text-center mt-5">
    <h1 class="display-3 text-danger">500</h1>
    <h3>😞 Oops! Something went wrong on our end.</h3>
    <p class="text-muted">@ViewBag.ErrorMessage</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">🏠 Go to Home</a>
</div>
