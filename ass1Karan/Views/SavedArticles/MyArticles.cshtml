@model IEnumerable<ass1Karan.Models.SavedArticle>

@{
    ViewData["Title"] = "My Saved Articles";
}

<div class="container mt-4">
    <h2 class="text-center mb-4"> My Saved Articles</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You haven’t saved any articles yet. Go to the <a asp-controller="News" asp-action="Index">News Page</a> to add some.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(article.ImageUrl))
                        {
                            <img src="@article.ImageUrl" class="card-img-top" alt="News Image" style="height:200px;object-fit:cover;">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@article.Description</p>
                            <a href="@article.Url" target="_blank" class="btn btn-primary btn-sm">Read More</a>

                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@article.Id" />
                                <button type="submit" class="btn btn-danger btn-sm mt-2"
                                        onclick="return confirm('Are you sure you want to delete this article?')">
                                    Delete
                                </button>
                            </form>
                        </div>

                        <div class="card-footer text-muted text-center">
                            Saved on @article.SavedAt.ToString("dd MMM yyyy, HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
