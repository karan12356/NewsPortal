@model IEnumerable<ass1Karan.Models.SavedArticle>
@{
    ViewData["Title"] = "My Saved Articles";
    int page = (int)(ViewData["Page"] ?? 1);
    int pageSize = (int)(ViewData["PageSize"] ?? 8);
    int total = (int)(ViewData["Total"] ?? 0);
    string sort = (string)(ViewData["Sort"] ?? "newest");
    int totalPages = (int)Math.Ceiling(total / (double)pageSize);
}

<div class="container mt-4">
    <h2 class="text-center mb-4">My Saved Articles</h2>

    <form method="get" class="d-flex justify-content-end mb-3">
        @{
            var newestSelected = sort == "newest" ? "selected" : "";
            var oldestSelected = sort == "oldest" ? "selected" : "";
        }
        <select name="sort" class="form-select w-auto me-2">
            @if (sort == "newest")
            {
                <text>
                <option value="newest" selected>Newest</option>
                <option value="oldest">Oldest</option>
                </text>
            }
            else
            {
                <text>
                <option value="newest">Newest</option>
                <option value="oldest" selected>Oldest</option>
                </text>
            }
        </select>

        <button class="btn btn-primary">Sort</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            You haven’t saved any articles yet. Go to the
            <a asp-controller="News" asp-action="Index">News Page</a> to add some.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var article in Model)
            {
                var avg = article.Ratings != null && article.Ratings.Any()
                    ? Math.Round(article.Ratings.Average(r => r.Value), 2)
                    : 0;

                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(article.ImageUrl))
                        {
                            <img src="@article.ImageUrl" class="card-img-top" alt="News Image" style="height:200px;object-fit:cover;">
                        }

                        <div class="card-body">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="card-text">@article.Description</p>
                            <a href="@article.Url" target="_blank" class="btn btn-primary btn-sm">Read More</a>

                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@article.Id" />
                                <button type="submit" class="btn btn-danger btn-sm mt-2"
                                        onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
                            </form>

                            <div class="mt-3">
                                <strong>Average Rating:</strong> @avg
                                <div class="mt-2">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form asp-action="Rate" method="post" class="d-flex gap-2">
                                            <input type="hidden" name="articleId" value="@article.Id" />
                                            <select name="value" class="form-select w-auto">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                            </select>
                                            <button class="btn btn-sm btn-outline-secondary">Rate</button>
                                        </form>
                                    }
                                </div>
                            </div>

                            <hr />
                            <h6>Comments (@(article.Comments?.Count ?? 0))</h6>

                            <div>
                                @foreach (var c in article.Comments.OrderByDescending(x => x.CreatedAt))
                                {
                                    <div class="border p-2 mb-2">
                                        <div class="d-flex justify-content-between">
                                            <small class="text-muted">@c.AuthorEmail</small>
                                            <small class="text-muted">@c.CreatedAt.ToString("dd MMM yyyy, HH:mm")</small>
                                        </div>
                                        <p class="mb-1">@c.Content</p>

                                        @if (User.Identity.IsAuthenticated &&
                                            (c.AuthorEmail == User.Identity.Name || User.IsInRole("Admin")))
                                        {
                                            <form asp-action="DeleteComment" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@c.Id" />
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        }
                                    </div>
                                }
                            </div>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="PostComment" method="post" class="mt-2">
                                    <input type="hidden" name="articleId" value="@article.Id" />
                                    <textarea name="content" class="form-control" rows="2" placeholder="Write a comment (5-250 chars)"></textarea>
                                    <button class="btn btn-sm btn-primary mt-2">Post Comment</button>
                                </form>
                            }
                            else
                            {
                                <p class="text-muted mt-2">
                                    <small>Login to post comments and rate</small>
                                </p>
                            }
                        </div>

                        <div class="card-footer text-muted text-center">
                            Saved on @article.SavedAt.ToString("dd MMM yyyy, HH:mm")
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @{
                var prevDisabled = page <= 1 ? "disabled" : "";
                var nextDisabled = page >= totalPages ? "disabled" : "";
            }
            <li class="page-item @prevDisabled">
                <a class="page-link" href="?page=@(page - 1)&sort=@sort">Previous</a>
            </li>
            @for (int i = 1; i <= Math.Max(1, totalPages); i++)
            {
                var activeClass = i == page ? "active" : "";
                <li class="page-item @activeClass">
                    <a class="page-link" href="?page=@i&sort=@sort">@i</a>
                </li>
            }
            <li class="page-item @nextDisabled">
                <a class="page-link" href="?page=@(page + 1)&sort=@sort">Next</a>
            </li>
        </ul>
    </nav>
</div>
